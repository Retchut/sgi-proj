<sxs>
    <scene root="beach_scene" axis_length="5"/>

    <views default="defaultView">
        <perspective id="perspectiveDefault" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <ortho id="orthoDefault"  near="0.1" far="500" left="0" right="0" top="0" bottom="0" >
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
            <up x="0" y="1" z="0" /> <!-- opcional, default 0,1,0 -->
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="Sea" file="Â´images/sea-water.jpg" />
        <texture id="Sun" file="images/sun.png" />
        <texture id="Donut" file="images/donut.png" />
        <texture id="Sand" file="images/sand.png" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="white" shininess="10">
            <emission r="1.0" g="1.0" b="1.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="table" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0"/>
            <ambient r="0.7" g="0.5" b="0.3" a="1.0" />
            <diffuse r="0.0" g="0.0" b="1.0" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="0.1" />
        </material>
        
        <material id="straw" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0"/>
            <ambient r="1.0" g="0.0" b="0.0" a="0.10" />
            <diffuse r="1.0" g="0.0" b="0.0" a="0.10" />
            <specular r="1.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="quarterX">
           <rotate axis="x" angle="-90" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="sand">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="sea">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="table_top">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="napkin">
            <triangle x1="1" y1="2" z1="0" x2="2" y2="5" z2="0" x3="5" y3="2" z3="0"/>
        </primitive>
        <primitive id="table_leg">
            <cylinder base="0.35" top="0.35" height="1.5" slices="30" stacks="10" />
        </primitive>
        <primitive id="sun">
            <sphere radius="1" slices="10" stacks="10" />
        </primitive>
        <primitive id="floater">
            <torus inner="0.75" outer="1.0" slices="10" loops="20" />
        </primitive>
    </primitives>

    <components>
        <component id="beach_sand">
            <transformation>
                <transformationref id="quarterX" />
                <scale x="1" y="1" z="2" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="sand" length_s="2.5" length_t="2.5"/>
            <children>
                <primitiveref id="sand" />
            </children>
        </component>

        
        <component id="beach_sea">
            <transformation>
                <transformationref id="quarterX" />
                <translate x="0" y="0" z="3" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="sea" length_s="2.5" length_t="2.5"/>
            <children>
                <primitiveref id="sea" />
            </children>
        </component>

        <component id="beach_ground">
            <transformation>
                <translate x="0" y="0" z="2" />
                <scale x="10" y="1" z="1.75" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="demoTexture" length_s="2.5" length_t="2.5"/>
            <children>
                <componentref id="beach_sand" />
                <componentref id="beach_sea" />
            </children>
        </component>

        <component id="beach_scene">
            <transformation>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="beach_ground" />
                <componentref id="sun" />
                <componentref id="floater" />
                <componentref id="table" />
            </children>
        </component>

        <component id="sun">
             <transformation>
                <translate x="-7" y="4.5" z="1.5" />
                <scale x="0.75" y="0.75" z="0.75" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="Sun" length_s="1" length_t="1" />
            <children>
                <primitiveref id="sun" />
            </children>
        </component>

        <component id="floater">
            <transformation>
                <transformationref id="quarterX" />
                <scale x="0.3" y="0.2" z="0.3" />
                <translate x="2.5" y="0" z="9" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="Donut" length_s="1" length_t="1" />
            <children>
                <primitiveref id="floater" />
            </children>
        </component>


        <component id="table_leg_1">
            <transformation>
                <transformationref id="quarterX" />
                <translate x="-2.5" y="0" z="-2.5" />
                <scale x="0.1" y="0.1" z="0.1" />
            </transformation>
            <materials>
                <material id="table" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="table_leg" />
            </children>
        </component>

        <component id="table_leg_2">
            <transformation>
                <transformationref id="quarterX" />
                <translate x="2.5" y="0" z="-2.5" />
                <scale x="0.1" y="0.1" z="0.1" />
            </transformation>
            <materials>
                <material id="table" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="table_leg" />
            </children>
        </component>

        <component id="table_leg_3">
            <transformation>
                <transformationref id="quarterX" />
                <translate x="-2.5" y="0" z="2.5" />
                <scale x="0.1" y="0.1" z="0.1" />
            </transformation>
            <materials>
                <material id="table" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="table_leg" />
            </children>
        </component>

        <component id="table_leg_4">
            <transformation>
                <transformationref id="quarterX" />
                <translate x="2.5" y="0" z="2.5" />
                <scale x="0.1" y="0.1" z="0.1" />
            </transformation>
            <materials>
                <material id="table" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="table_leg" />
            </children>
        </component>

        <component id="table_base">
            <transformation>
            </transformation>
            <materials>
                <material id="table" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="table_leg_1" />
                <componentref id="table_leg_2" />
                <componentref id="table_leg_3" />
                <componentref id="table_leg_4" />
            </children>
        </component>

        <component id="table_top">
            <transformation>
                <transformationref id="quarterX" />
                <scale x="0.6" y="1" z="0.3" />
                <translate x="0" y="0.15" z="0" />
            </transformation>
            <materials>
                <material id="table" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="table_top" />
            </children>
        </component>

        <component id="napkin">
            <transformation>
                <transformationref id="quarterX" />
                <scale x="0.05" y="0.05" z="0.05" />
                <translate x="0.005" y="0.3" z="0.2" />
            </transformation>
            <materials>
                <material id="table" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="napkin" />
            </children>
        </component>

         <component id="table">
            <transformation>
                <scale x="3" y="1.5" z="3" />
                <translate x="3" y="0.05" z="1.5" />
            </transformation>
            <materials>
                <material id="table" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="table_top" />
                <componentref id="table_base" />
                <componentref id="napkin" />
            </children>
        </component>
        
    </components>
</sxs>